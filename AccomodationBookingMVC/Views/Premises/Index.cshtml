@model IEnumerable<AccomodationBookingMVC.Models.Premise>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PremiseName)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.RoomCount)</th>
            <th>@Html.DisplayNameFor(model => model.Area)</th>
            <th>@Html.DisplayNameFor(model => model.HasRestroom)</th>
            <th>Owner</th>
            <th>Premise Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PremiseName</td>
                <td>@item.Address</td>
                <td>@item.RoomCount</td>
                <td>@item.Area</td>
                <td>@Html.DisplayFor(modelItem => item.HasRestroom)</td>

                <td>@item.Owner.FullName</td>
                <td>@item.PremiseType.TypeName</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.PremiseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PremiseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PremiseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
